load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "language",
    srcs = [
        "common.go",
        "coverage.go",
        "doc.go",
        "go1_1.go",
        "go1_2.go",
        "index.go",
        "language.go",
